---
import '@/styles/globals.css';
import { ScheduleComponent } from '@/components/schedule';
import { Alert, AlertDescription, AlertTitle } from '@/components/ui/alert';
import Layout from '@/layouts/Layout.astro';
import { InfoIcon } from 'lucide-react';
---

<Layout title='Welcome to Astro.'>
	<div class='mx-4 my-2'>
		<Alert className='h-fit py-2 px-4 flex items-center gap-2'>
			<AlertTitle className='flex items-center my-auto'>
				<InfoIcon className='size-4' />
			</AlertTitle>
			<AlertDescription className='text-xs flex items-center'>
				This is generated by a genetic algorithm so it may not generate your
				expected best result, feel free to run it again
			</AlertDescription>
		</Alert>
	</div>
	<main class='mt-8 mx-10 flex flex-col gap-8'>
		<ScheduleComponent client:load />
	</main>
</Layout>
